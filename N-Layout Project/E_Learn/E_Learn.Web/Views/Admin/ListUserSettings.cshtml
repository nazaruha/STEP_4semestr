@using E_Learn.DataAccess.Data.ViewModel.User;
@model UpdateProfileVM;

<section class="min-vh-100 mb-8">
    <div class="container">
        <div class="row">
            <div class="col-xl-4 col-lg-5 col-md-7 mx-auto mt-3">
                <div class="card z-index-0">
                    <div class="text-center pt-4">
                        <h5>Update profile information</h5>
                    </div>
                    <div class="card-body">
                        <form role="form text-left" method="post" asp-controller="Admin" asp-action="ListUserSettings">
                            @if (@ViewBag.AuthError != null)
                            {
                                <span class="text-danger">@ViewBag.AuthError</span>
                            }
                            <div class="mb-3">
                                <input asp-for="Id" type="hidden" class="form-control" aria-label="Id" aria-describedby="email-addon" />
                                <input asp-for="Name" type="text" class="form-control" placeholder="Name" aria-label="Name" aria-describedby="email-addon">
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                            <div class="mb-3">
                                <input asp-for="Surname" type="text" class="form-control" placeholder="Surname" aria-label="Surname" aria-describedby="email-addon">
                                <span class="text-danger" asp-validation-for="Surname"></span>
                            </div>
                            <div class="mb-3">
                                <input asp-for="Email" type="email" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="email-addon">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="mb-3">
                                <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="Phone number" aria-label="PhoneNumber" aria-describedby="email-addon">
                                <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn bg-gradient-dark w-100 my-4 mb-2">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-lg-5 col-md-7 mx-auto mt-3">
                <div class="card z-index-1 border border-2 border-danger">
                    <div class="text-center pt-4">
                        <h5 class="text-danger">Danger Zone</h5>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-controller="Admin" asp-action="DeleteUser">
                            <input asp-for="Id" type="hidden" class="form-control" aria-label="Id" aria-describedby="id-addon" />
                            <div class="text-center">
                                <button type="submit" class="btn bg-gradient-danger w-100 my-4 mb-2">Delete</button>
                            </div>
                        </form>
                        @if (Model.LockoutEnabled)
                        {
                            <form method="post" asp-controller="Admin" asp-action="BlockUser">
                                <input asp-for="Id" type="hidden" class="form-control" aria-label="Id" aria-describedby="id-addon" />
                                <div class="text-center">
                                    <button type="submit" class="btn bg-gradient-warning w-100 my-4 mb-2">Block</button>
                                </div>
                            </form>
                        }
                        else
                        {
                            <form method="post" asp-controller="Admin" asp-action="UnblockUser">
                                <input asp-for="Id" type="hidden" class="form-control" aria-label="Id" aria-describedby="id-addon" />
                                <div class="text-center">
                                    <button type="submit" class="btn bg-gradient-warning w-100 my-4 mb-2">Unblock</button>
                                </div>
                            </form>
                        }
                    </div>
               </div>
            </div>
        </div>
    </div>
</section>
