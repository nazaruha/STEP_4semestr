@using E_Learn.DataAccess.Data.Models.Categories;
@model Category

<section class="min-vh-100 mb-8">
    <div class="container">
        <div class="row">
            <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
                <div class="card z-index-0">
                    <div class="text-center pt-4">
                        <h5>Update profile information</h5>
                    </div>
                    <div class="card-body">
                        <form role="form text-left" method="post" asp-controller="Admin" asp-action="AddCategory">
                            @if (@ViewBag.AuthError != null)
                            {
                                @if (ViewBag.AuthError == "Category is added.")
                                {
                                    <span class="text-success">@ViewBag.AuthError</span>
                                }
                                else
                                {
                                    <span class="text-danger">@ViewBag.AuthError</span>
                                }
                                
                            }
                            <div class="mb-3">
                                <input asp-for="Name" type="text" class="form-control" placeholder="Name" aria-label="Name" aria-describedby="email-addon">
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn bg-gradient-dark w-100 my-4 mb-2">Add</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
