@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section>
    <div class="page-header min-vh-75">
        <div class="row">
            <div class="col-xl-4 col-md-6 col-lg-5 d-flex flex-column mx-auto">
                <div class="card card-plain mt-8">
                    <div class="card-header pb-0 text-left bg-transparent">
                        <h1 class="font-weight-bold text-info text-gradient">Password recovery</h1>
                        @if(ViewBag.AuthError != null)
                        {
                            <p class="text-danger">@ViewBag.AuthError</p>
                        }
                        <label>Email</label>
                        <div class="mb-3">
                            <form class="form-inline" method="post" asp-controller="Admin" asp-action="ForgotPassword">
                                <input type="email" name="Email" class="form-control" />
                                <button type="submit" class="nav-link btn btn-warning border-0">Reset Password</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
